{
  "include": [
    "./src/**/*",
    "@types"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es2015",
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  }
}
