{
  "include": [
    "./src/**/*.ts",
    "@types"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "outDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "diagnostics": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  }
}
